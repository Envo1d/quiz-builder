generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum QuestionType {
  BOOLEAN
  INPUT
  CHECKBOX
}

model Quiz {
  id    String @id @default(cuid())
  title String

  questions Question[]

  @@map("quizzes")
}

model Question {
  id    String       @id @default(cuid())
  title String
  type  QuestionType

  correctAnswer String? @map("correct_answer") // input correct answer

  quiz   Quiz?   @relation(fields: [quizId], references: [id], onDelete: Cascade)
  quizId String? @map("quiz_id")

  options Option[]

  @@map("questions")
}

model Option {
  id         String   @id @default(cuid())
  text       String
  isCorrect  Boolean  @map("is_correct")
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  questionId String

  @@map("options")
}
